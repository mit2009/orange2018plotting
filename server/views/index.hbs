<canvas id="myChart"></canvas>

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.min.js"></script>
<script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
    crossorigin="anonymous"></script>

<script type="text/javascript">



    var ctx = document.getElementById('myChart').getContext('2d');

    grdBlue = ctx.createLinearGradient(150.000, 0.000, 150.000, 300.000);

    grdBlue.addColorStop(0.000, 'rgba(0, 165, 255, 1.000)');
    grdBlue.addColorStop(1.000, 'rgba(0, 165, 255, 0.200)');

    grdOrange = ctx.createLinearGradient(150.000, 0.000, 150.000, 300.000);

    grdOrange.addColorStop(0.000, 'rgba(255, 116, 53, 1.000)');
    grdOrange.addColorStop(1.000, 'rgba(255, 116, 53, 0.200)');

    $.get('data', (data) => {
        console.log(data);
        var chart = new Chart(ctx, {
            // The type of chart we want to create
            type: 'line',

            // The data for our dataset
            data: {
                labels: data.timeArray,
                datasets: [{
                    label: "My First dataset",
                    backgroundColor: grdBlue,
                    borderColor: '#00A5FF',
                    borderWidth: 0.1,
                    data: data.noVestaArray,
                }, {
                    label: "My Second dataset",
                    backgroundColor: grdOrange,
                    borderColor: '#FF7435',
                    borderWidth: 0.1,
                    data: data.hasVestaArray,
                }]
            },

            // Configuration options go here
            options: {
                scales: {
                    xAxes: [{
                        ticks: {
                            stepSize: 100
                        }
                    }]
                }
            }
        });

    })

</script>